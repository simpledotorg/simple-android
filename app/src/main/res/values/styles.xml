<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- AppBar -->
  <style name="Widget.Simple.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.Blue0Primary</item>
  </style>

  <!-- Toolbar -->
  <style name="Widget.Simple.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
    <item name="contentInsetStartWithNavigation">64dp</item>
    <item name="android:elevation">@dimen/elevation_toolbar</item>
    <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
    <item name="titleTextColor">?attr/colorOnPrimary</item>
    <item name="navigationIconTint">?attr/colorOnPrimary</item>
  </style>

  <!-- TabLayout -->
  <style name="Widget.Simple.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
    <item name="tabSelectedTextColor">?attr/colorOnSurface</item>
    <item name="tabIndicatorColor">?attr/colorError</item>
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.TabLayout</item>
  </style>

  <!-- Buttons -->
  <style name="Widget.Simple.Button" parent="Widget.MaterialComponents.Button">
    <item name="android:insetTop">@dimen/spacing_0</item>
    <item name="android:insetBottom">@dimen/spacing_0</item>
    <item name="iconPadding">@dimen/spacing_8</item>
    <item name="iconGravity">textStart</item>
    <item name="android:textAppearance">?attr/textAppearanceButtonBig</item>
  </style>

  <style name="Widget.Simple.Button.Blue2">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.Blue2Primary</item>
  </style>

  <style name="Widget.Simple.Button.Green1">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.Green1Primary</item>
  </style>

  <style name="Widget.Simple.Button.Red2">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.Red2Primary</item>
  </style>

  <style name="Widget.Simple.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:insetTop">@dimen/spacing_0</item>
    <item name="android:insetBottom">@dimen/spacing_0</item>
    <item name="android:textAppearance">?attr/textAppearanceButton</item>
  </style>

  <style name="Widget.Simple.Button.TextButton.Red1">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.Red1Primary</item>
  </style>

  <style name="Widget.Simple.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:insetTop">@dimen/spacing_0</item>
    <item name="android:insetBottom">@dimen/spacing_0</item>
    <item name="iconPadding">@dimen/spacing_8</item>
    <item name="iconGravity">textStart</item>
    <item name="strokeColor">@color/mtrl_btn_stroke_color_selector</item>
    <item name="android:textAppearance">?attr/textAppearanceButtonBig</item>
  </style>

  <style name="Widget.Simple.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog" />

  <style name="Widget.Simple.Button.TextButton.Dialog.Flush" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush" />

  <style name="Widget.Simple.Button.TextButton.Dialog.OnSurface34">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.OnSurface34Primary</item>
  </style>

  <style name="Widget.Simple.Button.TextButton.Dialog.Red1">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.Red1Primary</item>
  </style>

  <style name="Widget.Simple.Button.Frame" parent="">
    <item name="android:padding">@dimen/spacing_8</item>
    <item name="android:background">?attr/colorPrimaryVariant</item>
    <item name="android:clipToPadding">false</item>
  </style>

  <!-- Dialog -->
  <style name="MaterialAlertDialog.Simple.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
    <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
  </style>

  <style name="MaterialAlertDialog.Simple.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
    <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
  </style>

  <!-- Radio Button -->
  <style name="Widget.Simple.CompoundButton.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.RadioButton</item>
  </style>

  <!-- Switch -->
  <style name="Widget.Simple.CompoundButton.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.Switch</item>
  </style>

  <!-- Check Box -->
  <style name="Widget.Simple.CompoundButton.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.CheckBox</item>
  </style>

  <!-- Text Field -->
  <style name="Widget.Simple.TextField.Large" parent="Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
    <!-- Simple EditText is 40dp height, so we need total of 20dp top and bottom. -->
    <item name="android:paddingTop">@dimen/spacing_16</item>
    <item name="android:paddingBottom">@dimen/spacing_4</item>
    <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
  </style>

  <style name="Widget.Simple.TextField.Layout.Large" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
    <item name="boxBackgroundColor">@android:color/transparent</item>
    <item name="hintEnabled">false</item>
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.TextField.Large</item>
  </style>

  <style name="Widget.Simple.TextField.Search" parent="Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
    <item name="android:paddingTop">@dimen/spacing_0</item>
    <item name="android:paddingBottom">@dimen/spacing_0</item>
    <item name="android:paddingStart">@dimen/spacing_0</item>
    <item name="android:paddingEnd">@dimen/spacing_0</item>
    <item name="android:textAppearance">?attr/textAppearanceBody0</item>
  </style>

  <style name="Widget.Simple.TextField.Layout.Search" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
    <item name="boxBackgroundColor">@android:color/transparent</item>
    <item name="boxBackgroundMode">none</item>
    <item name="endIconMode">clear_text</item>
    <item name="endIconTint">@color/color_on_surface_67</item>
    <item name="hintEnabled">false</item>
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.TextField.Flat</item>
    <item name="errorTextAppearance">?attr/textAppearanceBody2</item>
  </style>

  <style name="Widget.Simple.TextField" parent="Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
    <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    <item name="android:paddingTop">26dp</item>
    <item name="android:paddingBottom">6dp</item>
  </style>

  <style name="Widget.Simple.TextField.AutoComplete" parent="Widget.MaterialComponents.AutoCompleteTextView.FilledBox.Dense">
    <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    <item name="android:paddingTop">26dp</item>
    <item name="android:paddingBottom">6dp</item>
  </style>

  <style name="Widget.Simple.TextField.Layout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
    <item name="boxBackgroundColor">@android:color/transparent</item>
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.TextField</item>
    <item name="hintTextAppearance">?attr/textAppearanceBody2</item>
    <item name="errorTextAppearance">?attr/textAppearanceBody2</item>
  </style>

  <!-- Card View -->
  <style name="Widget.Simple.CardView" parent="Widget.MaterialComponents.CardView">
    <item name="android:stateListAnimator">@animator/raise_card_on_press</item>
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Simple.MaterialCardView</item>
  </style>

  <!-- Simple App Views -->
  <style name="Widget.Simple.PatientContactCallResultItem" parent="">
    <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    <item name="android:textColor">?attr/colorPrimary</item>
    <item name="android:paddingStart">@dimen/spacing_16</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:drawablePadding">@dimen/spacing_8</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingBottom">@dimen/spacing_12</item>
    <item name="android:paddingTop">@dimen/spacing_12</item>
  </style>

  <style name="Widget.Simple.ExpandedToolbar.FacilityName" parent="">
    <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    <item name="android:textColor">?attr/colorOnToolbarPrimary</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:padding">@dimen/spacing_8</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:drawableStart">@drawable/ic_location_20dp</item>
    <item name="android:drawablePadding">@dimen/spacing_8</item>
  </style>

  <style name="Widget.Simple.TextField.Layout.PatientEntry">
    <item name="endIconTint">@color/color_on_surface_67</item>
    <item name="startIconTint">@color/color_on_surface_67</item>
    <item name="endIconMode">clear_text</item>
    <item name="endIconDrawable">@drawable/ic_clear_circular_16dp</item>
  </style>

  <style name="Widget.Simple.TextField.Layout.PatientEntry.AutoComplete">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.TextField.AutoComplete</item>
  </style>

  <style name="Widget.Simple.TextField.PinEntry" parent="">
    <item name="android:digits">1234567890</item>
    <item name="android:imeOptions">actionDone</item>
    <item name="android:minWidth">168dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:inputType">numberPassword</item>
    <item name="pinAnimationType">none</item>
    <item name="pinCharacterMask">\u25CF</item>
    <item name="pinCharacterSpacing">@dimen/spacing_8</item>
    <item name="pinLineColors">@color/pin_edittext_underline</item>
    <item name="pinLineStroke">@dimen/spacing_1</item>
    <item name="pinLineStrokeSelected">@dimen/spacing_1</item>
  </style>

  <style name="Widget.Simple.TextField.PinEntry.Otp">
    <item name="pinCharacterMask">@null</item>
    <item name="android:inputType">number</item>
  </style>

  <style name="Widget.Simple.TextField.Layout.Large.ShortCodeEntry">
    <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
  </style>

  <style name="Widget.Simple.TextField.Large.MeasurementInput">
    <item name="android:paddingTop">@dimen/spacing_8</item>
    <item name="android:paddingBottom">@dimen/spacing_8</item>
    <item name="android:paddingStart">@dimen/spacing_4</item>
    <item name="android:paddingEnd">@dimen/spacing_4</item>
    <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
    <item name="android:minWidth">84dp</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="Widget.Simple.TextField.Layout.Large.MeasurementInput">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.TextField.Large.MeasurementInput
    </item>
  </style>

  <style name="Widget.Simple.TextField.Large.MeasurementInput.Date">
    <item name="android:minWidth">64dp</item>
    <item name="android:minEms">1</item>
  </style>

  <style name="Widget.Simple.TextField.Layout.Large.MeasurementInput.Date">
    <item name="materialThemeOverlay">
      @style/ThemeOverlay.Simple.TextField.Large.MeasurementInput.Date
    </item>
  </style>

  <style name="Widget.Simple.MeasurementInputSeparator" parent="android:Widget">
    <item name="android:layout_marginStart">@dimen/spacing_8</item>
    <item name="android:layout_marginEnd">@dimen/spacing_8</item>
    <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
    <item name="android:textColor">@color/color_on_surface_34</item>
    <item name="android:text">/</item>
  </style>

  <style name="Widget.Simple.Button.UnitPreference">
    <item name="iconGravity">textEnd</item>
    <item name="iconSize">@dimen/spacing_16</item>
    <item name="iconPadding">@dimen/spacing_4</item>
    <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:minHeight">@dimen/spacing_32</item>
    <item name="cornerRadius">@null</item>
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Simple.UnitPreferenceButton
    </item>
  </style>

  <style name="Widget.Simple.Button.Toolbar" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:insetTop">@dimen/spacing_0</item>
    <item name="android:insetBottom">@dimen/spacing_0</item>
    <item name="android:minWidth">@dimen/spacing_0</item>
    <item name="android:minHeight">@dimen/spacing_24</item>
    <item name="android:paddingStart">@dimen/spacing_8</item>
    <item name="android:paddingEnd">@dimen/spacing_8</item>
    <item name="android:paddingTop">@dimen/spacing_4</item>
    <item name="android:paddingBottom">@dimen/spacing_4</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:textAppearance">?attr/textAppearanceButton</item>
    <item name="iconPadding">@dimen/spacing_4</item>
    <item name="iconGravity">textStart</item>
    <item name="materialThemeOverlay">@style/ThemeOverlay.Simple.ToolbarButton</item>
  </style>

  <style name="Widget.Simple.Chip.Answer" parent="Widget.MaterialComponents.Chip.Choice">
    <item name="checkedIconEnabled">true</item>
    <item name="checkedIconVisible">true</item>
    <item name="chipIconSize">@dimen/spacing_16</item>
    <item name="checkedIconTint">?attr/colorOnPrimary</item>
    <item name="chipBackgroundColor">@color/answer_chip_background</item>
    <item name="chipStartPadding">@dimen/spacing_8</item>
    <item name="chipEndPadding">@dimen/spacing_8</item>
    <item name="android:textColor">@color/answer_chip_text</item>
    <item name="android:minWidth">@dimen/spacing_56</item>
    <item name="android:textAlignment">center</item>
  </style>
  
  <style name="Widget.Simple.TextField.Large.DateInput">
    <item name="android:minWidth">64dp</item>
    <item name="android:minEms">1</item>
    <item name="android:paddingTop">@dimen/spacing_8</item>
    <item name="android:paddingBottom">@dimen/spacing_8</item>
    <item name="android:paddingStart">@dimen/spacing_4</item>
    <item name="android:paddingEnd">@dimen/spacing_4</item>
    <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
    <item name="android:textAlignment">center</item>
  </style>
</resources>
