<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="ClinicTheme" parent="Theme.Design.Light.NoActionBar">
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryDark">@color/color_primary_dark</item>
    <item name="colorAccent">@color/color_accent</item>

    <item name="toolbarStyle">@style/Clinic.V2.ToolbarStyle</item>
    <item name="android:windowBackground">@color/window_background</item>
  </style>

  <style name="Clinic" />

  <style name="ClinicTheme.BottomSheetActivity">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="Clinic.Button" />

  <style name="Clinic.Button.ClearEditText">
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:layout_marginTop">14dp</item>
    <item name="android:padding">@dimen/spacing_12</item>
    <item name="android:tint">@color/gray_500</item>
    <item name="android:src">@drawable/ic_clear_circular_16dp</item>
  </style>

  <style name="Clinic.BloodPressureInput">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@null</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:gravity">center|top</item>
    <item name="android:inputType">number</item>
    <item name="android:maxEms">3</item>
    <item name="android:maxLength">3</item>
    <item name="android:minEms">3</item>
    <item name="android:textSize">44sp</item>
  </style>

  <style name="Clinic.BloodPressureInputUnderline">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1.5dp</item>
    <item name="android:layout_marginEnd">24dp</item>
    <item name="android:layout_marginStart">24dp</item>
    <item name="android:background">@color/gray_300</item>
    <item name="android:layout_marginBottom">@dimen/spacing_8</item>
  </style>

  <style name="Clinic.BloodPressureInputLabel">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_horizontal</item>
  </style>

  <style name="Clinic.Separator">
    <item name="android:background">@color/black_opacity_05</item>
  </style>

  <style name="Clinic.Separator.VerticalContent">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">2dp</item>
  </style>

  <style name="Clinic.LoginBackButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/spacing_16</item>
    <item name="android:layout_marginStart">@dimen/spacing_24</item>
    <item name="android:padding">@dimen/spacing_4</item>
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:tint">@color/white</item>
  </style>

  <style name="Clinic.LoginPinPhoneNumber" parent="Clinic.LoginLogo.Large">
    <item name="android:paddingBottom">26dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:textColor">@color/white_opacity_90</item>
    <item name="android:textSize">32sp</item>
  </style>

  <style name="Clinic.LoginPinErrorText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">#F23D00</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:visibility">gone</item>
    <item name="android:layout_marginTop">@dimen/spacing_4</item>
  </style>

  <style name="Clinic.ConfirmPinMessageText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/black_opacity_50</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:layout_marginTop">@dimen/spacing_4</item>
  </style>

  <style name="Clinic.LoginPinLabel">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/black_opacity_80</item>
    <item name="android:textSize">@dimen/textsize_18</item>
  </style>

  <style name="Clinic.LoginCardContentContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:orientation">vertical</item>
    <item name="android:paddingBottom">@dimen/spacing_24</item>
    <item name="android:paddingEnd">@dimen/spacing_24</item>
    <item name="android:paddingStart">@dimen/spacing_24</item>
    <item name="android:paddingTop">@dimen/spacing_24</item>
    <item name="android:animateLayoutChanges">true</item>
  </style>

  <style name="Clinic.LoginCard">
    <item name="cardCornerRadius">4dp</item>
    <item name="cardElevation">@dimen/elevation_cardview</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">@dimen/spacing_24</item>
    <item name="android:layout_marginStart">@dimen/spacing_24</item>
  </style>

  <style name="Clinic.StaggeredEditText">
    <item name="android:layout_width">160dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/spacing_12</item>
    <item name="android:gravity">center</item>
    <item name="android:digits">1234567890</item>
    <item name="android:textSize">@dimen/textsize_20</item>
    <item name="pinAnimationType">none</item>
    <item name="pinCharacterSpacing">@dimen/spacing_8</item>
    <item name="pinLineColors">@color/pin_edittext_underline</item>
    <item name="pinLineStroke">1dp</item>
    <item name="pinLineStrokeSelected">1dp</item>
  </style>

  <style name="Clinic.StaggeredEditText.Pin">
    <item name="android:inputType">numberPassword</item>
    <item name="pinCharacterMask">\u25CF</item>
  </style>

  <style name="Clinic.StaggeredEditText.Otp">
    <item name="android:inputType">number</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Clinic.FullWidthButtonFrame">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
  </style>

  <style name="Clinic.FullWidthButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:background">@null</item>
    <item name="android:clickable">false</item> <!-- The parent is clickable instead. -->
    <item name="android:drawablePadding">8dp</item>
    <item name="android:focusable">false</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:textSize">@dimen/textsize_16</item>
  </style>

  <style name="Clinic.DoneFrame" parent="Clinic.FullWidthButtonFrame">
    <item name="android:background">#69B038</item>
  </style>

  <style name="Clinic.DoneButton" parent="Clinic.FullWidthButton">
    <item name="android:textColor">@color/white</item>
    <item name="android:drawableStart">@drawable/ic_done_20dp</item>
  </style>

  <style name="Clinic.TextAppearance" />

  <style name="Clinic.TextAppearance.TextInputLayoutError">
    <item name="android:textColor">@color/textinputlayout_error</item>
    <item name="android:textSize">@dimen/textsize_12</item>
  </style>

  <style name="Clinic.LoginLogoContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/color_primary</item>
  </style>

  <style name="Clinic.LoginLogo">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColor">#692209</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Clinic.LoginLogo.Compact">
    <item name="android:textSize">@dimen/textsize_20</item>
  </style>

  <style name="Clinic.LoginLogo.Large">
    <item name="android:layout_marginEnd">@dimen/spacing_24</item>
    <item name="android:layout_marginStart">@dimen/spacing_24</item>
    <item name="android:layout_marginTop">44dp</item>
    <item name="android:layout_marginBottom">@dimen/spacing_24</item>
    <item name="android:textSize">34sp</item>
  </style>

  <style name="Clinic.LoginCardTitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/black_opacity_80</item>
    <item name="android:textSize">@dimen/textsize_20</item>
  </style>

  <style name="Clinic.LoginInputTextAppearance">
    <item name="android:textSize">@dimen/textsize_20</item>
    <item name="android:textStyle">bold</item>
  </style>

  <!-- TODO: Accepting better names. -->
  <style name="Clinic.LoginLogoContainerOverflow">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_alignTop">@+id/loginphone_card</item>
    <item name="android:background">@color/color_primary</item>
  </style>

  <style name="Clinic.Button.Flat" parent="Widget.AppCompat.Button">
    <item name="android:textColor">?android:textColorPrimaryInverse</item>
    <item name="android:background">@color/color_accent</item>
    <item name="android:foreground">?selectableItemBackgroundBorderless</item>
  </style>

  <style name="Clinic.OnboardingImage">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:scaleType">center</item>
    <item name="android:elevation" tools:ignore="NewApi">@dimen/spacing_16</item>
  </style>

  <style name="Clinic.RegistrationUserFullName">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_marginTop">@dimen/spacing_12</item>
    <item name="android:textColor">@color/white_opacity_90</item>
    <item name="android:textSize">@dimen/textsize_20</item>
  </style>

  <style name="Clinic.RegistrationUserPhone">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_marginBottom">@dimen/spacing_8</item>
    <item name="android:layout_marginTop">2dp</item>
    <item name="android:textColor">@color/white_opacity_90</item>
  </style>

  <style name="Clinic.RegistrationPinHint">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/spacing_8</item>
    <item name="android:textColor">@color/black_opacity_50</item>
    <item name="android:gravity">center_horizontal</item>
  </style>

  <style name="Clinic.RegistrationInputError">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textColor">@color/textinputlayout_error</item>
  </style>

  <style name="Clinic.UserApprovalStatusTitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/textsize_16</item>
  </style>

  <style name="Clinic.UserApprovalStatusMessage">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:lineSpacingExtra">4sp</item>
    <item name="android:textColor">@color/white_opacity_60</item>
  </style>

  <style name="Clinic.SnackbarAction">
    <item name="colorControlHighlight">#4099ff66</item>
    <item name="android:textColor">@color/snackbar_action</item>
  </style>

  <style name="Clinic.FacilitySelection" />

  <style name="Clinic.FacilitySelection.FacilityName">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/black_opacity_90</item>
    <item name="android:textSize">@dimen/textsize_16</item>
  </style>

  <style name="Clinic.FacilitySelection.FacilityAddress">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">2dp</item>
    <item name="android:textColor">@color/black_opacity_50</item>
  </style>

  <style name="Clinic.FacilitySelection.FacilitySeparator" parent="Clinic.Separator.VerticalContent">
    <item name="android:layout_marginTop">@dimen/spacing_16</item>
  </style>

  <style name="Clinic.FacilitySelection.FacilityContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:paddingEnd">@dimen/spacing_24</item>
    <item name="android:paddingStart">@dimen/spacing_24</item>
    <item name="android:paddingTop">@dimen/spacing_16</item>
  </style>
</resources>
