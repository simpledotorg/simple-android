<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/drugItemCard"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardCornerRadius="@dimen/spacing_0">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
      android:id="@+id/drugNameTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/spacing_12"
      android:layout_marginTop="@dimen/spacing_12"
      android:textAppearance="?attr/textAppearanceBody1"
      android:textColor="?attr/colorOnSurface"
      app:layout_constraintBottom_toTopOf="@id/drugCompositionTextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_goneMarginBottom="@dimen/spacing_12"
      tools:text="Losartan-H 50/12.5mg, OD" />

    <com.google.android.material.textview.MaterialTextView
      android:id="@+id/drugCompositionTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/spacing_12"
      android:layout_marginTop="@dimen/spacing_4"
      android:layout_marginBottom="@dimen/spacing_12"
      android:textAppearance="?attr/textAppearanceBody2"
      android:textColor="@color/color_on_surface_67"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/drugNameTextView"
      tools:text="(losartan-hydrochlorothiazide)"
      tools:visibility="visible" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
